<h2>Your answer :</h2>

<% if @student_answer %>
  <%= link_to @student_answer.content, student_answer_path(@student_answer) %>
  </br>
  <em>Options: </em><%= link_to "edit", edit_student_answer_path(@student_answer)%>
   -- <%= link_to "destroy", student_answer_path(@student_answer), method: :delete %>
  <% else %>
  Please answer the question:
    <%= form_for([@question, @question.student_answers.build]) do |a| %>
      <p><%= a.label :content %>
      <%= a.text_area :content, class: "form-control rows='3' little-margin-bottom" %>
      <%= a.submit "Submit", class: "btn btn-default btn-primary" %>
    <% end %>
<% end %>

<br>

<h2>Your mentor review :</h2>

<% if @mentor_reviews %>
    <%= @mentor_reviews.content %>
  <% else %>
    You don't have any mentor review.
<% end %>

<br>